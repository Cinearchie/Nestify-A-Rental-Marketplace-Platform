<%layout("/layouts/boilerplate.ejs")%>

<div class="row mt-3">
    <div class="col-8 offset-2">
        <h1>Edit Listing</h1>
        <br>
        <form method="post" action="/listings/<%=al._id%>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input type="text" value="<%=al.title%>" name="listing[title]" class="form-control" required>
                <div class="invalid-feedback">Please Enter a Valid Title</div>
                <div class="valid-feedback">Title looks good!!</div>
            </div>
            <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <input type="text" value="<%=al.description%>" name="listing[description]" class="form-control" required>
                <div class="invalid-feedback">Please Enter a Valid Description</div>
                <div class="valid-feedback">Description looks good!!</div>
            </div>
            <div class="mb-3">
                <p>Original Image</p>
                <img src="<%=original%>" alt="">
            </div>
            <div class="mb-3">
                <label for="image" class="form-label">Image</label>
                <input type="file" value="<%=al.image.url%>" name="listing[image]" class="form-control">
                <div class="invalid-feedback">Please Enter a Valid Image Link</div>
                <div class="valid-feedback">Link looks good!!</div>
            </div>
            <div class="row">
                <div class="mb-3 col-4">
                    <label for="price" class="form-label">Price</label>
                    <input type="number" value="<%=al.price%>" name="listing[price]" class="form-control" required>
                    <div class="invalid-feedback">Please Enter a Valid Price</div>
                    <div class="valid-feedback">Price looks good!!</div>
                </div>
                <div class="mb-3 col-8">
                    <label for="country" class="form-label">Country</label>
                    <input type="text" value="<%=al.country%>" name="listing[country]" class="form-control" required>
                    <div class="invalid-feedback">Please Enter a Valid Country Name</div>
                    <div class="valid-feedback">Country looks good!!</div>
                </div>
            </div>
            
            <div class="mb-3">
                <label for="location" class="form-label">Location</label>
                <input type="text" value="<%=al.location%>" name="listing[location]" class="form-control" required>
                <div class="invalid-feedback">Please Enter a Valid Location</div>
                <div class="valid-feedback">Location looks good!!</div>
            </div>
            <button class="btn btn-dark mt-3 edit-btn">Edit Listing</button>
            <br>
            <br>
        </form>
    </div>
</div>
    